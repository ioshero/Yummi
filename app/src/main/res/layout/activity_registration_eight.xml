<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/eight"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bgColor"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.almabranding.yummi.WelcomeActivity">


            <ImageView
                android:id="@+id/login_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/logo_top_margin"
                android:src="@mipmap/logo_gold" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="@string/performer_promo_text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/welcome_button_text_size" />


            <LinearLayout
                android:id="@+id/triple_choice_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/login_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-12dp"
                android:layout_marginTop="90dp"
                android:background="@drawable/service_button_style"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1.5">


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="start|left"
                    android:text="@string/services"
                    android:textColor="@color/blackColor" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="-20dp"
                    android:layout_weight="0.3"
                    android:src="@mipmap/arrow_small" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tr_choice_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/triple_choice_layout"
                android:layout_centerHorizontal="true"
                android:background="@drawable/service_button_style"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1.5">


                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="start|left"
                    android:text="Prices"
                    android:textColor="@color/blackColor" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="-20dp"
                    android:layout_weight="0.3"
                    android:src="@mipmap/arrow_small" />
            </LinearLayout>


            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView2"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignRight="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_below="@+id/tr_choice_layout"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:lines="2"
                android:text="@string/set_up_your_services"
                android:textSize="12sp" />

            <Button
                android:id="@+id/reg_third_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tr_choice_layout"
                android:layout_marginTop="52dp"
                android:background="@drawable/main_gold_button"
                android:gravity="center"
                android:text="@string/sign_up"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/welcome_button_text_size"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/need_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="18dp"
                android:text="@string/need_help"
                android:textColor="@android:color/black"
                android:textSize="@dimen/register_text_size" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/need_help"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="12dp"
                android:background="@drawable/gold_circle_background"
                android:text="9"
                android:textColor="@android:color/white"
                android:textSize="@dimen/welcome_button_text_size"
                android:textStyle="bold" />


        </RelativeLayout>
    </RelativeLayout>
    <!-- Side navigation drawer UI -->
    <ListView
        android:id="@+id/navList"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="right|end"
        android:background="#ffeeeeee" />

</android.support.v4.widget.DrawerLayout>