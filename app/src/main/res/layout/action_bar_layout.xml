<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_height="60dp"
    android:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#000"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/drawer_imageview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_gravity="left|center"
            android:layout_weight="0.4"
            android:src="@mipmap/menu_active" />

        <TextView
            android:id="@+id/actionbar_titleview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_weight="2.2"
            android:gravity="center"
            android:maxHeight="50dp"
            android:text="Create an Event"
            android:textColor="#fff"
            android:textSize="18sp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/drawer_imageview_done"
            android:layout_width="0dp"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            android:layout_gravity="right|center"
            android:layout_weight="0.4"
            android:src="@mipmap/menu_icon_search" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/drawer_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|left"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/actionbar_titleimageview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_weight="2"
            android:gravity="center"
            android:maxHeight="50dp"
            android:src="@mipmap/title_icon" />

        <TextView
            android:id="@+id/drawer_textview_done"
            android:layout_width="0dp"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="0.5"
            android:text="UPDATE"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="14sp" />

    </LinearLayout>
</RelativeLayout>

