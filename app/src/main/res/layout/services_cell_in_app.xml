<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#555555"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/imageView7"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:text="Sex"
        android:textColor="#aaa" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="13dp"
        android:src="@mipmap/approved" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageView5"
        android:layout_toStartOf="@+id/imageView5"
        android:src="@mipmap/ic_menu_plusx" />

    <TextView
        android:visibility="gone"
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/textView21"
        android:layout_toStartOf="@+id/textView21"
        android:text="0.0"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#fff" />
    <TextView
        android:visibility="gone"
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageView6"
        android:layout_toStartOf="@+id/imageView6"
        android:text=" h"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#fff" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_margin="3dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/textView20"
        android:layout_toStartOf="@+id/textView20"
        android:src="@mipmap/ic_menu_minus" />


</RelativeLayout>