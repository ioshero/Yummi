<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical"
                android:weightSum="3.0">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:id="@+id/detail_layout"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:background="#f7a700"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="4.0">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_weight="4.0"
                            android:lines="1"
                            android:text="Event Status"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#fff"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/detail_layout">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/title"
                            android:textColor="#000"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/editText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/textView12"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="20dp"
                            android:layout_toRightOf="@+id/textView12"
                            android:background="#fff"
                            android:gravity="right"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:lines="1"
                            android:textColor="#aaaaaa" />

                        <View
                            android:id="@+id/first_separator"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignLeft="@+id/textView12"
                            android:layout_below="@+id/textView12"
                            android:background="#c8c7cc" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/first_separator"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/date"
                            android:textColor="#000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/date_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/textView13"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="20dp"
                            android:layout_toRightOf="@+id/textView13"
                            android:background="#fff"
                            android:gravity="right"
                            android:lines="1"
                            android:singleLine="true"
                            android:textColor="#aaaaaa" />

                        <View
                            android:id="@+id/second_separator"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignLeft="@+id/textView13"
                            android:layout_below="@+id/textView13"
                            android:background="#c8c7cc" />


                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/second_separator"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/duration"
                            android:textColor="#000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/duration_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/textView14"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="20dp"
                            android:layout_toRightOf="@+id/textView14"
                            android:background="#fff"
                            android:gravity="right"
                            android:text="0 hours"
                            android:textColor="#aaaaaa" />

                        <View
                            android:id="@+id/second_separator1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignLeft="@+id/textView13"
                            android:layout_below="@+id/textView14"
                            android:background="#c8c7cc" />


                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/second_separator1"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/location"
                            android:textColor="#000"
                            android:textSize="14sp" />


                        <TextView
                            android:id="@+id/location_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/textView15"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="20dp"
                            android:layout_toRightOf="@+id/textView15"
                            android:background="#fff"
                            android:drawableEnd="@mipmap/arrow_smallx"
                            android:drawableRight="@mipmap/arrow_smallx"
                            android:gravity="right"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:lines="1"
                            android:textColor="#aaaaaa" />

                        <View
                            android:id="@+id/second_separator2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignLeft="@+id/textView13"
                            android:layout_below="@+id/textView15"
                            android:background="#c8c7cc" />


                    </RelativeLayout>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.0"
                    android:orientation="vertical"
                    android:weightSum="2.0">

                    <fragment
                        android:id="@+id/map"
                        class="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1.35" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="20dp"
                        android:layout_weight="0.65"
                        android:orientation="horizontal"
                        android:weightSum="2.0">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:orientation="vertical"
                            android:weightSum="2.0">

                            <Button
                                android:id="@+id/services_button"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="6dp"
                                android:layout_marginRight="6dp"
                                android:layout_marginTop="6dp"
                                android:layout_weight="1.0"
                                android:background="#000"
                                android:drawableLeft="@mipmap/button_icon_list"
                                android:gravity="center"
                                android:paddingBottom="5dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="5dp"
                                android:text="@string/services"
                                android:textAllCaps="false"
                                android:textColor="@color/whiteColor"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/guests_button"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="6dp"
                                android:layout_marginRight="6dp"
                                android:layout_marginTop="6dp"
                                android:layout_weight="1.0"
                                android:background="#000"
                                android:drawableLeft="@mipmap/button_icon_guests"
                                android:gravity="center"
                                android:paddingBottom="5dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="5dp"
                                android:text="@string/guests"
                                android:textAllCaps="false"
                                android:textColor="@color/whiteColor"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:orientation="vertical"
                            android:weightSum="2.0">

                            <Button
                                android:id="@+id/performers_button"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="6dp"
                                android:layout_marginLeft="6dp"
                                android:layout_marginTop="6dp"
                                android:layout_weight="1.0"
                                android:background="#000"
                                android:drawableLeft="@mipmap/button_icon_ladies"
                                android:gravity="center"
                                android:paddingBottom="5dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="5dp"
                                android:text="@string/performers"
                                android:textAllCaps="false"
                                android:textColor="@color/whiteColor"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/notifications_button"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="6dp"
                                android:layout_marginLeft="6dp"
                                android:layout_marginTop="6dp"
                                android:layout_weight="1.0"
                                android:background="#000"
                                android:drawableLeft="@mipmap/button_icon_notification"
                                android:gravity="center"
                                android:paddingBottom="5dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="5dp"
                                android:text="@string/notifications"
                                android:textAllCaps="false"
                                android:textColor="@color/whiteColor"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.0"
                    android:background="#f8f8f8">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#f8f8f8"
                        android:orientation="horizontal"
                        android:weightSum="4.0">

                        <LinearLayout
                            android:id="@+id/ladies"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="centerInside"
                                android:src="@mipmap/tab_bar_female_icong" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="All Ladies"
                                android:textColor="#acabab" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="centerInside"
                                android:src="@mipmap/tab_bar_nearby_icong" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Nearby"
                                android:textColor="#acabab" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="centerInside"
                                android:src="@mipmap/tab_bar_favorites_icong" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Favourites"
                                android:textColor="#acabab" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="centerInside"
                                android:src="@mipmap/tab_bar_events_icon" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="My Events"
                                android:textColor="#000" />

                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="#b3b3b3">

                    </View>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

