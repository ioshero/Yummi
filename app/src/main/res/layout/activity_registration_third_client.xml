<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/third"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.almabranding.yummi.WelcomeActivity">


    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/logo_top_margin"
        android:src="@mipmap/logo_black" />


    <TextView
        android:id="@+id/promo_texview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/client_promo_text"
        android:textColor="@android:color/black"
        android:textSize="@dimen/welcome_button_text_size" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_logo"
        android:layout_marginTop="@dimen/field_top_margin">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/triple_choice_layout"
                android:layout_marginBottom="-20dp"
                android:text="@string/gender"
                android:textColor="@android:color/black"
                android:textSize="@dimen/register_text_size"
                android:textStyle="bold"

                />

            <LinearLayout
                android:id="@+id/triple_choice_layout"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-12dp"
                android:orientation="horizontal"
                android:weightSum="1.5">

                <TextView
                    android:id="@+id/choice_a"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/left_off"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/choice_b"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-2dp"
                    android:layout_marginRight="-2dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/mid_off"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/choice_c"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/right_off"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@android:color/black" />
            </LinearLayout>


            <TextView
                android:id="@+id/interested_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/triple_choice_layout_a"
                android:layout_marginBottom="-40dp"
                android:text="@string/interested_in"
                android:textColor="@android:color/black"
                android:textSize="@dimen/register_text_size"
                android:textStyle="bold"

                />

            <LinearLayout
                android:id="@+id/triple_choice_layout_a"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/triple_choice_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-12dp"
                android:layout_marginTop="45dp"
                android:orientation="horizontal"
                android:weightSum="1.5">

                <TextView
                    android:id="@+id/choice_aa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/left_off"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/choice_ab"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-2dp"
                    android:layout_marginRight="-2dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/mid_off"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/choice_ac"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/right_off"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@android:color/black" />
            </LinearLayout>


            <Button
                android:id="@+id/reg_third_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/triple_choice_layout_a"
                android:layout_marginTop="24dp"
                android:background="@drawable/main_grey_button"
                android:gravity="center"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/welcome_button_text_size"
                android:textStyle="bold" />

        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/need_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:text="@string/need_help"
        android:textColor="@android:color/black"
        android:textSize="@dimen/register_text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/need_help"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:background="@drawable/gold_circle_background"
        android:text="3"
        android:textColor="@android:color/white"
        android:textSize="@dimen/welcome_button_text_size"
        android:textStyle="bold" />


</RelativeLayout>
